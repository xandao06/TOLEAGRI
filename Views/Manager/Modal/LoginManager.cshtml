@model TOLEAGRI.Model.Domain.Login

@{
    Layout = null;
}

<div id="modalLoginManager" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formLoginManager" method="post" asp-action="Login" >
                <div class="modal-header">
                    <h5 class="modal-title">Entrada do Estoque</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-1 ">
                        <input asp-for="Id" id="Id" name="Id" type="hidden">
                        <input required asp-for="Usuario" type="text" class="form-control mb-2" id="Usuario" placeholder="Usuario">
                        <input required asp-for="Senha" type="password" class="form-control mb-2" id="Senha" placeholder="Senha">
                    </div>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary">Salvar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/ManagerScript.js"></script>