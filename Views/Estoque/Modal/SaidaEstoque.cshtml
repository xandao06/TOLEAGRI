@model TOLEAGRI.Model.Domain.Peca

@{
    Layout = null;
}

<div id="modalSaidaEstoque" class="modal" tabindex="-1" style="display:block">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color:rgb(245,245,245);">

            <form id="formSaidaEstoque" method="post" asp-action="SaidaEstoque">
                <div class="modal-header" style="height:50px">
                    <h5 class="modal-title">Saida de Estoque</h5>
                    <button type="button" class="btn btn-secondary" id="clearFormButton">Limpar</button>
                </div>
                <div class="text-danger">
                    @Html.ValidationSummary(false)
                </div>
                <div class="modal-body" >
                    <div>
                        <input asp-for="Id" id="Id" name="Id" type="hidden">

                        <input required asp-for="Data" type="date" class="form-control mb-2" id="Data">

                        <input asp-for="EntradaOuSaida" value="Saída" type="hidden" id="Saída">


                        <label asp-for="CodigoSistema"> **Código da Peça** </label>
                        <input required asp-for="CodigoSistema" type="text" class="form-control" name="CodigoSistema" id="CodigoSistema">

                            <div class="input-group mt-3">
                            <label class="mr-2" asp-for="Locacao">**Locação**</label>
                            <input required asp-for="Locacao" style="width:90px" type="text" class="form-control" id="Locacao">

                            <label class="mr-2 ml-2" asp-for="Quantidade">**Quantidade**</label>
                            <input required asp-for="Quantidade" value="" type="number" class="form-control" id="Quantidade">
                            </div>

                            <label class="mt-2" asp-for="NotaOuPedido">**Nota Fiscal/Pedido**</label>
                            <input required asp-for="NotaOuPedido" type="int" class="form-control" id="NotaOuPedido">

                            <label class="mt-1" asp-for="Usuario">Responsável</label>
                            <input asp-for="Usuario" type="text" class="form-control" id="Usuario">

                        <div class="input-group mt-3">
                            <label class="mr-2" asp-for="Marca">Marca</label>
                            <input asp-for="Marca" type="text" class="form-control" id="Marca">

                            <label class="mr-2 ml-2" asp-for="Modelo">Modelo</label>
                            <input asp-for="Modelo" type="text" class="form-control" id="Modelo">
                        </div>

                        <label class="mt-1" asp-for="Observacao">Observação</label>
                        <input asp-for="Observacao" type="text" class="form-control" id="Observacao">

                    </div>

                </div>
                <div class="modal-footer" style="height:60px">
                    <button type="submit" class="btn btn-dark border-light">Salvar</button>
                    <button type="button" class="btn btn-dark border-light" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
            }
        </div>
    </div>
</div>

<script src="~/js/EstoqueScript.js"></script>
<script src="~/js/ManagerScript.js"></script>
