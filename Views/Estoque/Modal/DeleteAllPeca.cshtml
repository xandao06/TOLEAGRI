@model TOLEAGRI.Model.Domain.Peca
@{
    Layout = null;
}


@* ////////// DELETAR TODAS AS PEÇAS /////////// *@ 

 <div id="modalDeleteAllPeca" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color:rgb(245,245,245);">
            <form method="post" asp-action="DeleteAllPeca">
                <input asp-for="Id" type="hidden">
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir todos os itens?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark border-light">Sim</button>
                    <button type="button" class="btn btn-dark border-light" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div> 


<script src="~/js/ManagerScript.js"></script>


