@model IEnumerable<TOLEAGRI.Model.Domain.Estoque>
@{
    ViewData["Title"] = "Estoques";
    var estoquesOrdenados = Model.OrderByDescending(c => c.CodigoSistema).ToList();
}

<div style="padding:40px" id="container" class="justify-content-between">
    <div>
