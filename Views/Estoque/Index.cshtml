    <div">
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Locação</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Quantidade</th>
                <th>Quantidade de saida</th>
                <th>Data de envio</th>
                <th>Observação</th>
                <th style="width:75px">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in estoquesOrdenados)
            {
                <tr>
                    <td>@item.CodigoSistema</td>
                    <td>@item.Locacao</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Quantidade</td>
                    <td>@item.QuantidadeSaida</td>
                    <td>@item.DataEnvio</td>
                    <td>@item.Observacao</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>