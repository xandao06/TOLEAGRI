@model IEnumerable<TOLEAGRI.Model.Domain.Peca>
@{
    ViewData["Title"] = "EstoqueIndex";
    var PecasOrdenados = Model.OrderBy(c => c.CodigoSistema).ToList();
}

<div id="container" >
    <div>
        <div class="mb-4" style="display:flex;justify-content:space-between">
            <div >
                <a class="btn btn-outline-secondary" onClick="ModalEntradaSaidaEstoque()">
                    <img  src="~/Images/abrirModalEntradaSaida.png" style="width:45px" />
                </a>
            </div>
            <div style="display:flex">
                <input type="text" id="searchBarPeca" style="height:40px;width:265px" class="form-control search" placeholder="Buscar" onkeydown="EnterPeca(event)">
                <input type="date" id="start-date" style="height:40px;width:150px" class="form-control search" placeholder="Data Inicial">
                <input type="date" id="end-date" style="height:40px;width:150px" class="form-control search" placeholder="Data Final">
                <a id="searchIconPecas" onclick="searchIconPecas()">
                    <img src="~/Images/Pesquisa.png" style="width:25px;margin-top:5px;margin-left:5px" />
                </a>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Locação</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Quantidade</th>
                <th>NF ou Pedido</th>
                <th>Observação</th>
                <th>Usuário</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody id="pecas-list">
            @foreach (var item in PecasOrdenados)
            {
                <tr class="peca-row">
                    <td>@item.CodigoSistema</td>
                    <td>@item.Locacao</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Quantidade</td>
                    <td>@item.NotaOuPedido</td>
                    <td>@item.Observacao</td>
                    <td>@item.Usuario</td>
                    <td>@item.Data.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/EstoqueScript.js"></script>
