@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity

@model IEnumerable<TOLEAGRI.Model.Domain.RegistroPeca>
@{
    ViewData["Title"] = "RegistroIndex";
    var RegistrosOrdenados = Model.OrderBy(c => c.CodigoSistema).ToList();
}

@{
    var isAdmin = User.IsInRole("Admin");
} 

<div id="container" class="container">
    <div>
        <div class="barra_tarefas">
            <div>
                <a class="btn btn-dark border-light ml-1" type="button" asp-controller="Estoque" asp-action="EstoqueIndex">
                    <img src="/Images/abrirEstoque.png" alt="Logo" class="custom-logo" style="width:40px" />
                    Estoque
                </a>
            </div>
            <div style="display:flex">
                <input type="text" id="searchBarRegistro" style="height:40px;width:265px;margin-right:5px" class="form-control btn-dark border-light search" placeholder="Buscar" onkeydown="EnterRegistro(event)">
                <input type="date" id="start-date" style="height:40px;width:150px;margin-right:5px" class="form-control btn-dark border-light search" placeholder="Data Inicial">
                <input type="date" id="end-date" style="height:40px;width:150px" class="form-control btn-dark border-light search" placeholder="Data Final">
                <a id="searchIconRegistros" onclick="searchIconRegistros()" style="cursor: pointer;">
                    <img src="~/Images/Pesquisa.png" style="width:25px;margin-top:5px;margin-left:5px" />
                </a>
            </div>
        </div>
    </div>
    <table class="table table-hover table-bordered table-dark">
        <thead>
            <tr>
                <th onclick="sortTableRegistros(0)">Código</th>
                <th onclick="sortTableRegistros(1)">Locação</th>
                <th onclick="sortTableRegistros(2)">Marca</th>
                <th onclick="sortTableRegistros(3)">Modelo</th>
                <th onclick="sortTableRegistros(4)">Quantidade</th>
                <th onclick="sortTableRegistros(5)">NF ou Pedido</th>
                <th onclick="sortTableRegistros(6)">Observação</th>
                <th onclick="sortTableRegistros(7)">Usuário</th>
                <th onclick="sortTableRegistros(8)">Data</th>
                <th onclick="sortTableRegistros(9)">Entrada/Saída</th>
                @if (isAdmin)
                    {
                        <th style="width:1px">
                            <a onClick="ModalDeleteAllRegistro()">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </th>
                    }
            </tr>
        </thead>
        <tbody id="registros-list" onload="sortTableChamados(8)">
            @foreach (var item in RegistrosOrdenados)
            {
                <tr class="registro-row">
                    <td>@item.CodigoSistema</td>
                    <td>@item.Locacao</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Quantidade</td>
                    <td>@item.NotaOuPedido</td>
                    <td>@item.Observacao</td>
                    <td>@item.Usuario</td>
                    <td>@item.Data.ToShortDateString()</td>
                    <td>@item.EntradaOuSaida</td>
                    @if (isAdmin)
                    {
                        <td style="width:1px">
                            <a onClick="ModalDeletarRegistro(@item.Id)">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/RegistroScript.js"></script>
<script src="~/js/ManagerScript.js"></script>