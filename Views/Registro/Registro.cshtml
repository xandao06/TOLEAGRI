@model IEnumerable<TOLEAGRI.Model.Domain.RegistroPeca>
@{
    ViewData["Title"] = "Registro";
    var RegistrosOrdenados = Model.OrderBy(c => c.CodigoSistema).ToList();
}

<div style="padding:40px" id="container" class="justify-content-between">
    <div>
        <h1 class="text-center mb-3">Registro</h1>
        <div class="mb-4" style="display:flex;justify-content:space-between">
            <div>
                <a class="btn btn-outline-dark" onClick="ModalEntradaSaidaEstoque()" id="btn-EntradaSaidaEstoque">Entrada/Saída</a>
                <a type="button" asp-controller="Estoque" asp-action="Index" class="btn btn-outline-dark">Estoque</a>
            </div>
            <div style="display:flex">
                <input type="text" id="search-input-registro" class="form-control search" placeholder="Buscar" onkeydown="handleKeyDownRegistro(event)">
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Locação</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Quantidade</th>
                <th>NF ou Pedido</th>
                <th>Observação</th>
                <th>Data</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody id="registros-list">
            @foreach (var item in RegistrosOrdenados)
            {
                <tr class="registro-row">
                    <td>@item.CodigoSistema</td>
                    <td>@item.Locacao</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Quantidade</td>
                    <td>@item.NotaOuPedido</td>
                    <td>@item.Observacao</td>
                    <td>@item.Data.ToShortDateString()</td>
                    <td>@item.Acao</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/site.js"></script>