<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TOLEAGRI</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@

</head>
<body>
    <header>
        <nav class="mb-3" style="justify-content:space-between">
            <a class="navbar-brand text-white d-flex align-items-center" asp-area="" asp-controller="Estoque" asp-action="Index">
                <img src="~/Images/Logo.png" alt="Logo" style="width:350px; margin-right:10px"  />
            </a>
            <div >
                <div style="margin-left:10px;margin-top:10px">
                    <a type="button" class="btn text-white px-1 mb-4" asp-controller="Estoque" asp-action="Index">
                        <img src="/Images/abrirEstoque.png" alt="Logo" class="custom-logo" style="width:40px" />
                    </a>
                    <a type="button" class="btn text-white mb-4" asp-controller="Registro" asp-action="Registro">
                        <img src="/Images/abrirRegistro.png" alt="Relogio" class="custom-logo" style="width:40px" />
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div id="modalTOLEAGRI"></div>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            teste
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>